{
  "name": "Save Anything on Anywhere",
  "version": "1.0.0",
  "description": "You can save your secret on any website to your browser.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "manifest_version": 3
}
